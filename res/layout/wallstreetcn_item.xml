<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/various_head_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_click_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/system_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:drawableBottom="@drawable/line_bottom"
        android:paddingBottom="5dp"
        android:textColor="@color/radio_tvcor"
        android:textSize="18sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/creatat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/radio_tvcor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/walls_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:paddingBottom="5dp"
            android:textColor="@color/radio_tvcor"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>